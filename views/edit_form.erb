<form class="form" action="/edit_recipe/<%=@recipe.id%>" method="post">

<h1 class="span_2 center">Edit the recipe for <%= @recipe.name %></h1>

<div class="form_option">
<label class="form_label" for="name">Name:</label>
<input type="text" name="name" value="<%=@recipe.name%>">
</div>

<div class="form_option">
<label class="form_label" for="prep_time">Preperation Time (In Minutes):</label>
<input type="number" name="prep_time" value=<%=@recipe.prep_time%>>
</div>

<div class="form_option span_2">
<label class="form_label" for="ingredients">Ingredients:</label>
<input type="text" name="ingredients" value="<%=@recipe.ingredients%>">
</div>

<div class="form_option">
<label class="form_label" for="meat">Contains Meat:</label>
<input type="checkbox" value="true" name="meat" <%= if @recipe.meat then "checked" end%>>
</div>

<div class="form_option">
<label class="form_label" for="milk">Contains Milk:</label>
<input type="checkbox" value="true" name="milk" <%= if @recipe.dairy then "checked" end%>>
</div>

<div class="form_option span_2">
<label class="form_label" for="instructions">Instructions:</label>
<input type="text" name="instructions" value="<%=@recipe.instructions%>">
</div>

<div class="form_option">
<input type="submit" value="Edit this recipe">
</div>








</form>